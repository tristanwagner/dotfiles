{
  "coc.preferences.formatOnSaveFiletypes": [
    "c",
    "go",
    "python",
    "rust",
    "markdown",
    "//javascript",
    "//typescript",
    "json",
    "jsonc"
  ],
  "explorer.file.showHiddenFiles": true,
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    },
    "rescript": {
      "enable": true,
      "module": "~/dotfiles/vim/vim.symlink/plugged/vim-rescript/server/out/server.js",
      "args": ["--node-ipc"],
      "filetypes": ["rescript"],
      "rootPatterns": ["bsconfig.json"]
    }
  },
  "list.source.files.args": ["--hidden", "--files"],
  "list.source.grep.args": [
    "--hidden",
    "--glob=!.git/*"
  ],
  "snippets.ultisnips.pythonPrompt": false
}
