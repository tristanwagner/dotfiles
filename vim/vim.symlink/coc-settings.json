{
  "coc.preferences.formatOnSaveFiletypes": [
    "c",
    "go",
    "python",
    "rust",
    "markdown",
    "//javascript",
    "//typescript",
    "json",
    "jsonc"
  ],
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod"
      ],
      "trace.server": "verbose",
      "filetypes": [
        "go"
      ]
    },
    "rescript": {
      "enable": true,
      "module": "~/dotfiles/vim/vim.symlink/plugged/vim-rescript/server/out/server.js",
      "args": [
        "--node-ipc"
      ],
      "filetypes": [
        "rescript"
      ],
      "rootPatterns": [
        "bsconfig.json"
      ]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "cuda",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".ccls-root",
        "compile_commands.json"
      ],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        },
        "client": {
          "snippetSupport": true
        }
      }
    }
  },
  "list.source.files.args": [
    "--hidden",
    "--files"
  ],
  "list.source.grep.args": [
    "--hidden",
    "--glob=!.git/*"
  ]
}
